@startuml
!define DeploymentDiagram https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Deployment.puml
!includeurl DeploymentDiagram

' Colores base
skinparam backgroundColor #1C2541
skinparam defaultFontColor #FAF3E0
skinparam node {
  BackgroundColor #394867
  BorderColor #F1C40F
  FontColor #FAF3E0
}

