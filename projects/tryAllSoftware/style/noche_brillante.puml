' Estilo Noche Brillante para Diagramas de Actividad

' ===== CONFIGURACIÓN GLOBAL =====
skinparam backgroundColor #0F0F0F
skinparam defaultFontName "Arial"
skinparam defaultFontSize 14
skinparam defaultFontColor #E0E0E0

' ===== TÍTULOS =====
skinparam titleFontColor #BBAA00
skinparam titleFontSize 24
skinparam titleFontStyle bold

' ===== ACTIVIDADES / ACCIONES =====
skinparam activity {
  BackgroundColor #1C1C1C
  BorderColor #FFCC00
  FontColor #E0E0E0
  FontSize 14
  FontStyle plain
}

' ===== DECISIONES =====
skinparam diamond {
  BackgroundColor #262626
  BorderColor #FF6600
  FontColor #FFFFFF
}

' ===== SWIMLANES (CARRILES) =====
skinparam partition {
  BackgroundColor #202020
  BorderColor #444444
  FontColor #FFCC00
}

' ===== OBJETOS =====
skinparam object {
  BackgroundColor #333333
  BorderColor #00CCCC
  FontColor #FFFFFF
}

' ===== BARRAS DE SINCRONIZACIÓN (FORK/JOIN) =====
skinparam synchronization {
  BackgroundColor #FFCC00
  BorderColor #FFCC00
}

' ===== FLECHAS / CONEXIONES =====
skinparam ArrowColor #00CCFF
skinparam ArrowThickness 2

' ===== NOTAS =====
skinparam note {
  BackgroundColor #1C1C1C
  BorderColor #888888
  FontColor #E0E0E0
}

' ===== SEPARADORES =====
skinparam separatorColor #444444
skinparam separatorFontColor #AAAAAA

' ===== PARTICIPANTES (ACTORES EN ACTIVITY) =====
skinparam participant {
  BackgroundColor #262626
  BorderColor #FF6600
  FontColor #FFCC00
}

' ===== TAMAÑOS OPCIONALES =====
skinparam activityFontSize 16
skinparam noteFontSize 14
skinparam arrowFontSize 14
