
' ===== CONFIGURACIÓN GLOBAL =====
skinparam backgroundColor #3E2723
skinparam defaultFontName "Verdana"
skinparam defaultFontSize 14
skinparam defaultFontColor #DAD3C0
skinparam shadowing true

' ===== TÍTULOS =====
skinparam titleFontColor #FFD700
skinparam titleFontSize 24
skinparam titleFontStyle bold


' ===== ACTIVIDADES / ACCIONES =====
skinparam activity {
  BackgroundColor #5D4037
  BorderColor #FFD700
  FontColor #FAF3E0
  RoundCorner 10
  FontStyle bold
}

' ===== DECISIONES =====
skinparam diamond {
  BackgroundColor #D7CCC8
  BorderColor #FFD700
  FontColor #3E2723
  RoundCorner 5
}

' ===== SWIMLANES (CARRILES) =====
skinparam partition {
  BackgroundColor #8D6E63
  BorderColor #FFD700
  FontColor #FAF3E0
  BorderThickness 2
  RoundCorner 0
}

' ===== BARRAS DE SWIMLANE =====
skinparam swimlane {
  BorderColor #FFD700
  BorderThickness 2
}

' ===== OBJETOS =====
skinparam object {
  BackgroundColor #5D4037
  BorderColor #FFD700
  FontColor #FAF3E0
  RoundCorner 5
}

' ===== BARRAS DE SINCRONIZACIÓN (FORK/JOIN) =====
skinparam synchronization {
  BackgroundColor #A1887F
  BorderColor #FFD700
  LineStyle 1
  Thickness 3
}

' ===== FLECHAS / CONEXIONES =====
skinparam Arrow {
  Color #FFD700
  Thickness 2
  FontColor #FFD700
  Style plain
}

' ===== NOTAS =====
skinparam note {
  BackgroundColor #5D4037
  BorderColor #FFD700
  FontColor #FAF3E0
  RoundCorner 5
}

' ===== SEPARADORES =====
skinparam separator {
  Color #A1887F
  FontColor #FAF3E0
  Thickness 1
}

' ===== PARTICIPANTES (ACTORES EN ACTIVITY) =====
skinparam participant {
  BackgroundColor #5D4037
  BorderColor #FFD700
  FontColor #FAF3E0
  RoundCorner 5
}

' ===== ELEMENTOS ADICIONALES =====
skinparam activityDiamond {
  BackgroundColor #D7CCC8
  BorderColor #FFD700
  FontColor #3E2723
}

skinparam arrow {
  Color #FFD700
  FontColor #FFD700
}

' ===== ESTILO PARA LOS NODOS DE INICIO/FIN =====
skinparam activityStart {
  Color #FFD700
  Style bold
}

skinparam activityEnd {
  Color #FFD700
  Style bold
}

skinparam activityStop{
  Color #FFD700
  Style bold
}

' ===== ESTILO PARA LOS BORDES DE SWIMLANES =====
skinparam swimlaneBorder {
  Color #FFD700
  Thickness 2
}